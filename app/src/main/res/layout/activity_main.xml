<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81EDD7"
    tools:context="com.example.android.gymmaster.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="364dp"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/gympic"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="356dp"
        android:layout_height="89dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="13dp"
        android:text="Gym Master is an app for Magical Fitness Center, whichhelps clients sign up, schedule and follow up on their attendance to the fitness center. "
        android:textSize="18sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="212dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@android:drawable/sym_action_call"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@android:drawable/ic_lock_idle_alarm"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/ic_menu_mylocation"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="29dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="0722356471"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/button3"
        android:textColor="#000000"
        android:text="Monday- Saturday" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.00am-7.00pm"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="Biashara Street Nairobi"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/textView4" />
</android.widget.RelativeLayout>
